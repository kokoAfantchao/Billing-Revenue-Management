module API
  module V1
    class IcdCode < Grape::API
      include API::V1::Defaults
      resource :icd do
        desc 'Return  all ICD  CODE'
        get '' do
          '{ all ICD code as json }'
        end

        desc 'Return a ICD by Description '
        params do
          requires :description, type: String, desc: 'Decription of the ICD'
        end
        get ':description' do
          '{return a specific ICD  Code  that match the descriptions }'
        end

        desc 'Return a list of ICD  that match description  Description '
        params do
          requires :description, type: String, desc: 'Decription of the ICD'
        end
        get ':description' do
          '{ return a  list of ICD Code  that match the descriptions }'
        end

        desc 'Return a list of ICD  in Category'
        params do
          requires :category, type: String, desc: 'Category of the ICD '
        end
        get ':category' do
          '{ return a  list of ICD Code  in category }'
        end
      end

    end
  end
end